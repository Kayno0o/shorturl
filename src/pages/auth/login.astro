---
import { LogIn, UserPlus } from '@lucide/astro'
import AuthLayout from '../../components/AuthLayout.astro'
import Input from '../../components/Input.astro'
---

<AuthLayout
  title="Sign In"
  heading="Welcome Back"
  description="Sign in to your account to continue"
  formAction="/api/auth/login"
  submitText="Sign In"
  alternativeText="Don't have an account yet?"
  alternativeLink="/auth/register"
  alternativeLinkText="Create Account"
>
  <LogIn size={16} slot="submit-icon" />
  <UserPlus size={16} slot="alternative-icon" />

  <Fragment slot="form-fields">
    <Input
      label="Username"
      name="username"
      required
      placeholder="Enter your username"
      autocomplete="username"
    />

    <Input
      label="Password"
      type="password"
      name="password"
      required
      placeholder="Enter your password"
      autocomplete="current-password"
    />
  </Fragment>
</AuthLayout>
