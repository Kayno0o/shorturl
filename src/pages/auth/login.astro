---
import { LogIn } from '@lucide/astro'
import Button from '../../components/Button.astro'
import Card from '../../components/Card.astro'
import Input from '../../components/Input.astro'
import AuthLayout from '../../layouts/AuthLayout.astro'
---

<AuthLayout
  title="Login"
  description="Login to your Shortlink Dashboard"
>
  <span slot="subtitle">Welcome back</span>

  <!-- Login Form -->
  <Card>
    <form action="/api/auth/login" method="post" class="space-y-4">
      <Input
        label="Username"
        name="username"
        required
        placeholder="Enter username"
        autocomplete="username"
      />

      <Input
        label="Password"
        type="password"
        name="password"
        required
        placeholder="Enter password"
        autocomplete="current-password"
      />

      <Button type="submit" class="w-full">
        <LogIn size={16} />
        Sign In
      </Button>
    </form>

    <div class="mt-4 border-t pt-4" style="border-color: var(--border-color)">
      <p class="text-center text-xs" style="color: var(--text-secondary)">
        Don't have an account?
        <a
          href="/auth/register"
          class={`
            ml-1 text-purple-600
            hover:underline
            dark:text-purple-400
          `}
        >
          Create one
        </a>
      </p>
    </div>
  </Card>
</AuthLayout>
