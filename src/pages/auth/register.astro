---
import { LogIn, UserPlus } from '@lucide/astro'
import AuthLayout from '../../components/AuthLayout.astro'
import Input from '../../components/Input.astro'
---

<AuthLayout
  title="Create Account"
  heading="Create Account"
  description="Join to start creating professional short links"
  formAction="/api/auth/register"
  submitText="Create Account"
  alternativeText="Already have an account?"
  alternativeLink="/auth/login"
  alternativeLinkText="Sign In"
>
  <UserPlus size={16} slot="submit-icon" />
  <LogIn size={16} slot="alternative-icon" />

  <Fragment slot="form-fields">
    <Input
      label="Username"
      name="username"
      required
      placeholder="Choose a username (2-16 characters)"
      autocomplete="username"
      minlength={2}
      maxlength={16}
      help="2-16 characters, letters and numbers only"
    />

    <Input
      label="Password"
      type="password"
      name="password"
      required
      placeholder="Create a secure password"
      autocomplete="new-password"
      minlength={6}
      maxlength={48}
      help="At least 6 characters with uppercase, lowercase, number, and special character (!.-_), or 24+ characters"
    />
  </Fragment>
</AuthLayout>
