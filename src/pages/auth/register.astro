---
import { UserPlus } from '@lucide/astro'
import Button from '../../components/Button.astro'
import Card from '../../components/Card.astro'
import Input from '../../components/Input.astro'
import AuthLayout from '../../layouts/AuthLayout.astro'
---

<AuthLayout
  title="Register"
  description="Create your Shortlink account"
>
  <span slot="subtitle">Create your account</span>

  <!-- Register Form -->
  <Card>
    <form action="/api/auth/register" method="post" class="space-y-4">
      <Input
        label="Username"
        name="username"
        required
        placeholder="Choose username"
        autocomplete="username"
        minlength={2}
        maxlength={16}
        help="2-16 characters, letters and numbers"
      />

      <Input
        label="Password"
        type="password"
        name="password"
        required
        placeholder="Create password"
        autocomplete="new-password"
        minlength={6}
        maxlength={48}
        help="6+ chars with upper, lower, number, special (!.-_)"
      />

      <Button type="submit" class="w-full">
        <UserPlus size={16} />
        Create Account
      </Button>
    </form>

    <div class="mt-4 pt-4 border-t" style="border-color: var(--border-color)">
      <p class="text-xs text-center" style="color: var(--text-secondary)">
        Already have an account?
        <a href="/auth/login" class="text-purple-600 dark:text-purple-400 hover:underline ml-1">
          Sign in
        </a>
      </p>
    </div>
  </Card>
</AuthLayout>
