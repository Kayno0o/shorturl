---
import type { Link } from '../api/orm/entities/link'
import { getUserFromJwt } from '../api/middleware/auth'
import Layout from '../layouts/Layout.astro'

const cookies = Astro.cookies
const user = getUserFromJwt(cookies.get('jwtToken')?.value)

const linksRes = await fetch(new URL('/api/l', `https://${import.meta.env.APP_URL}`), {
  headers: {
    Cookie: Astro.request.headers.get('cookie') || '',
  },
})
let links: Link[]
try {
  links = await linksRes.json()
}
catch (e) {
  links = []
  console.error(linksRes.url, linksRes.status)
}
---

<Layout title="URL Shortener">
  <div class="backdrop-blur-lg bg-white/10 dark:bg-white/5 rounded-3xl shadow-2xl border border-white/20 p-8">
    {user
      ? (
        <div class="space-y-6">
        <!-- Header -->
        <div class="text-center">
          <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            URL Shortener
          </h1>
          <p class="text-gray-600 dark:text-gray-300">
            Welcome back, <span class="font-semibold text-indigo-600 dark:text-indigo-400">{user.username}</span>!
          </p>
        </div>

        <!-- Create Form -->
        <form action="/api/l/create" method="post" class="space-y-4">
          <div class="grid grid-cols-1 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Short Name
              </label>
              <input
                type="text"
                name="code"
                required
                class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-white/10 backdrop-blur-sm border border-white/30 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all placeholder-gray-400"
                placeholder="e.g., my-link">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Target URL
              </label>
              <input
                type="url"
                name="value"
                required
                class="w-full px-4 py-3 rounded-xl bg-white/50 dark:bg-white/10 backdrop-blur-sm border border-white/30 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all placeholder-gray-400"
                placeholder="https://example.com">
            </div>
          </div>
          <button
            type="submit"
            class="w-full py-3 px-6 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold hover:from-indigo-600 hover:to-purple-700 transform hover:scale-[1.02] transition-all shadow-lg hover:shadow-xl"
          >
            Create Short Link
          </button>
        </form>

        <!-- Links List -->
        {links.length > 0 && (
          <div class="space-y-3">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">Your Links</h3>
            <div class="space-y-2 max-h-64 overflow-y-auto">
              {links.map(link => (
                <div class="backdrop-blur-sm bg-white/30 dark:bg-white/10 rounded-xl p-4 border border-white/20">
                  <div class="flex items-center justify-between mb-2">
                    <code class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded text-sm font-mono text-indigo-600 dark:text-indigo-400">
                      {link.code}
                    </code>
                    <div class="flex gap-2">
                      <a
                        href={link.value}
                        target="_blank"
                        class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 text-sm font-medium transition-colors"
                      >
                        Visit â†—
                      </a>
                      <button
                        onclick={`navigator.clipboard.writeText('https://${import.meta.env.SHORT_URL}/${link.code}')`}
                        class="text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 text-sm font-medium transition-colors"
                      >
                        Copy
                      </button>
                    </div>
                  </div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 truncate">
                    <span class="font-medium">Target:</span> {link.value}
                  </div>
                  <div class="text-sm text-gray-600 dark:text-gray-400 truncate">
                    <span class="font-medium">Short:</span> https://{import.meta.env.SHORT_URL}/{link.code}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Logout -->
        <div class="pt-4 border-t border-white/20">
          <a
            href="/api/auth/logout"
            class="text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 text-sm transition-colors"
          >
            Sign Out
          </a>
        </div>
        </div>
      )
      : (
        <div class="text-center space-y-6">
          <div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
              URL Shortener
            </h1>
            <p class="text-gray-600 dark:text-gray-300 text-lg">
              Create short, memorable links for your URLs
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/auth/login"
              class="px-6 py-3 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold hover:from-indigo-600 hover:to-purple-700 transform hover:scale-[1.02] transition-all shadow-lg hover:shadow-xl"
            >
              Sign In
            </a>
            <a
              href="/auth/register"
              class="px-6 py-3 rounded-xl bg-white/20 dark:bg-white/10 text-gray-700 dark:text-gray-300 font-semibold hover:bg-white/30 dark:hover:bg-white/20 border border-white/30 transition-all"
            >
              Create Account
            </a>
          </div>
        </div>
      )}
  </div>
</Layout>
