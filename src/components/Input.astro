---
export interface Props {
  label?: string
  error?: string
  help?: string
  class?: string
  [key: string]: any
}

const {
  label,
  error,
  help,
  class: className = '',
  ...props
} = Astro.props

const inputClasses = `input-field text-white ${error ? 'border-red-500 focus:border-red-500 focus:ring-red-500/20' : ''} ${className}`
---

<div>
  {label && (
    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
      {label}
    </label>
  )}

  <input class={inputClasses} {...props} />

  {help && (
    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
      {help}
    </p>
  )}

  {error && (
    <p class="text-xs text-red-600 dark:text-red-400 mt-1">
      {error}
    </p>
  )}
</div>
