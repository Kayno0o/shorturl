---
export interface Props {
  variant?: 'default' | 'hover' | 'interactive' | 'stat'
  compact?: boolean
  class?: string
  [key: string]: any
}

const {
  variant = 'default',
  compact = false,
  class: className = '',
  ...props
} = Astro.props

const baseClasses = 'dash-card'
const variants = {
  default: '',
  hover: 'dash-card-hover',
  interactive: 'dash-card-interactive',
  stat: 'stat-card',
}

const compactClass = compact ? 'p-3' : 'p-4'
const classes = `
  ${baseClasses}
  ${variants[variant]}
  ${compactClass}
  ${className}
`
---

<div class={classes} {...props}>
  <slot />
</div>
