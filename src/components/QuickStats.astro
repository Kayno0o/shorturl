---
import type { User } from '../api/orm/entities/user'
import { Globe, LogOut, Shield } from '@lucide/astro'
import Card from './Card.astro'

export interface Props {
  linkCount: number
  totalClicks: number
  user: User
  topCountries: { code: string, name: string, count: number }[]
}

const { linkCount, totalClicks, user, topCountries } = Astro.props
---

<aside aria-label="Quick statistics and actions" class="space-y-4">
  <Card class="p-6 text-center">
    <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">
      {linkCount}
    </div>
    <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
      Total Links
    </div>
  </Card>

  <Card class="p-6 text-center">
    <div class="text-3xl font-bold text-green-600 dark:text-green-400">
      {totalClicks}
    </div>
    <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
      Total Clicks
    </div>
  </Card>

  {topCountries.length > 0 && (
    <Card class="p-6">
      <div class="flex items-center gap-2 mb-4">
        <Globe size={18} class="text-purple-600 dark:text-purple-400" />
        <h3 class="font-medium text-gray-900 dark:text-gray-100">Top Countries</h3>
      </div>
      <div class="space-y-2">
        {topCountries.slice(0, 3).map(country => (
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-700 dark:text-gray-300">
              {country.name}
            </span>
            <span class="text-sm font-medium text-gray-900 dark:text-gray-100">
              {country.count}
            </span>
          </div>
        ))}
      </div>
    </Card>
  )}

  <Card class="p-4">
    <h3 class="font-medium text-gray-900 dark:text-gray-100 mb-3">Quick Actions</h3>
    <nav aria-label="Quick actions">
      <ul class="space-y-2 list-none">
        <li>
          <a
            href="/api/auth/logout"
            class="btn-ghost w-full justify-start text-red-600 dark:text-red-400 inline-flex items-center gap-2"
          >
            <LogOut size={16} aria-hidden="true" />
            <span>Sign Out</span>
          </a>
        </li>
        {!user.mfa_token && (
          <li>
            <a
              href="/api/auth/mfa/create"
              class="btn-ghost w-full justify-start text-purple-600 dark:text-purple-400 inline-flex items-center gap-2"
            >
              <Shield size={16} aria-hidden="true" />
              <span>Enable Two-Factor Authentication</span>
            </a>
          </li>
        )}
      </ul>
    </nav>
  </Card>
</aside>
