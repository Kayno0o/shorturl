---
import { BarChart3, Link as LinkIcon, Shield } from '@lucide/astro'
import Card from './Card.astro'

const features = [
  {
    icon: LinkIcon,
    title: 'Custom Links',
    description: 'Create memorable, branded short links with custom codes',
    color: 'blue',
  },
  {
    icon: BarChart3,
    title: 'Analytics',
    description: 'Track clicks and monitor performance of your links',
    color: 'green',
  },
  {
    icon: Shield,
    title: 'Secure',
    description: 'Enterprise-grade security for your links and data',
    color: 'purple',
  },
]
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  {features.map(feature => (
    <Card variant="hover" class="p-6 text-center">
      <div class={`w-12 h-12 bg-${feature.color}-100 dark:bg-${feature.color}-900/20 rounded-xl flex items-center justify-center mx-auto mb-4`}>
        <feature.icon class={`w-6 h-6 text-${feature.color}-600 dark:text-${feature.color}-400`} />
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
        {feature.title}
      </h3>
      <p class="text-gray-600 dark:text-gray-400 text-sm">
        {feature.description}
      </p>
    </Card>
  ))}
</div>
