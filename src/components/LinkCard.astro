---
import { Copy, Edit, ExternalLink, Trash2, TrendingUp } from '@lucide/astro'

export interface Props {
  code: string
  value: string
  shortUrl: string
  clickCount: number
}

const { code, value, shortUrl, clickCount } = Astro.props
const fullShortUrl = `https://${shortUrl}/${encodeURIComponent(code)}`
---

<article class="bento-card bento-card-hover p-5" aria-label={`Short link: ${code}`}>
  <header class="flex items-start justify-between mb-3">
    <div class="code-block text-xs font-medium">
      <span class="sr-only">Short code:</span>
      {code}
    </div>
    <div class="flex gap-2" role="group" aria-label="Link actions">
      <button
        onclick={`navigator.clipboard.writeText('${fullShortUrl}')`}
        class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 p-1 rounded hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors"
        aria-label={`Copy link ${code} to clipboard`}
        title="Copy to clipboard"
      >
        <Copy size={16} aria-hidden="true" />
      </button>
      <a
        href={`/edit/${code}`}
        class="text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300 p-1 rounded hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors"
        aria-label={`Edit link ${code}`}
      >
        <Edit size={16} aria-hidden="true" />
      </a>
      <a
        href={value}
        target="_blank"
        rel="noopener noreferrer"
        class="text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 p-1 rounded hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors"
        aria-label={`Visit ${code} - opens ${value} in new tab`}
      >
        <ExternalLink size={16} aria-hidden="true" />
      </a>
      <form method="post" action={`/api/l/delete/${encodeURIComponent(code)}`} class="inline">
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this link?')"
          class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 p-1 rounded hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors"
          aria-label={`Delete link ${code}`}
        >
          <Trash2 size={16} aria-hidden="true" />
        </button>
      </form>
    </div>
  </header>

  <dl class="space-y-2">
    <div class="text-sm">
      <dt class="text-gray-500 dark:text-gray-400 inline">Target URL:</dt>
      <dd class="text-gray-900 dark:text-gray-100 truncate mt-1">
        {value}
      </dd>
    </div>
    <div class="text-sm">
      <dt class="text-gray-500 dark:text-gray-400 inline">Short URL:</dt>
      <dd class="text-blue-600 dark:text-blue-400 truncate mt-1 font-medium">
        {fullShortUrl}
      </dd>
    </div>
    <div class="text-sm flex items-center gap-2">
      <dt class="text-gray-500 dark:text-gray-400 flex items-center gap-1">
        <TrendingUp size={14} aria-hidden="true" />
        <span>Clicks:</span>
      </dt>
      <dd class="text-gray-900 dark:text-gray-100 font-medium">
        {clickCount.toLocaleString()}
      </dd>
    </div>
  </dl>
</article>
