---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'danger'
  size?: 'sm' | 'md' | 'lg'
  type?: 'button' | 'submit' | 'reset'
  class?: string
  disabled?: boolean
  [key: string]: any
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  class: className = '',
  disabled = false,
  ...props
} = Astro.props

const baseClasses = 'btn'
const variantClasses = `btn-${variant}`
const sizeClasses = size === 'sm' ? 'btn-sm' : ''

const classes = `
  ${baseClasses}
  ${variantClasses}
  ${sizeClasses}
  ${className}
`
---

<button
  type={type}
  class={classes}
  disabled={disabled}
  {...props}
>
  <slot />
</button>
